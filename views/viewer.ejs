<!-- views/viewer.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="viewer">
        <img src="<%= imageSrc %>" alt="<%= title %>">
        <div class="navigation">
            <% if (previousImage) { %>
                <a href="/viewer/<%= previousImage %>">Previous</a>
            <% } %>
            <% if (nextImage) { %>
                <a href="/viewer/<%= nextImage %>">Next</a>
            <% } %>
        </div>
    </div>
</body>
</html>